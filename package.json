{
  "name": "binance-alerts",
  "version": "1.0.0",
  "description": "Crypto price alerts system for Binance",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon index.js",
    "client": "npm start --prefix client",
    "start:fast": "node start-simple.js",
    "websocket": "node simple-websocket-service.js",
    "worker": "node simple-alert-worker.js",
    "populate": "node populate-database.js",
    "start:optimized": "node start-optimized.js",
    "start:memory-safe": "node --max-old-space-size=1024 --expose-gc index.js",
    "server-alt": "nodemon server/index.js",
    "sync:once": "node auto_sync_pairs.js --once",
    "sync:monitor": "node monitor_autosync.js",
    "sync:status": "node monitor_autosync.js status",
    "sync:history": "node monitor_autosync.js history",
    "sync:test": "node monitor_autosync.js test"
  },
  "keywords": [
    "binance",
    "crypto",
    "alerts",
    "price",
    "monitoring"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "ioredis": "^5.8.0",
    "jsonwebtoken": "^9.0.2",
    "lightweight-charts": "^5.0.8",
    "mongoose": "^8.0.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "redis": "^5.8.3",
    "socket.io": "^4.7.2",
    "telegraf": "^4.16.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
